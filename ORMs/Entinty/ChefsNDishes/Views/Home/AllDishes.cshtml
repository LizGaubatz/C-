@model List<Dish>

@{
    ViewData["Title"] = "All Dishes";
}

<div class="d-flex flex-column justify-content-center">
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="NewDish">Add New Dish</a>
    <div class="col-9 border-bottom border-dark">
        <h5 class="p-3">Yum, take a look at our tasty dishes!</h5>
    </div>
    <div class="pt-3 col-12">
        <table class="table table-striped table-bordered table-hover p-0 m-0">
            <thead class="thead-dark">
                <tr>
                    <th scope="col-5">Name</th>
                    <th scope="col-5">Chef</th>
                    <th scope="col-1">Tastiness</th>
                    <th scope="col-1">Calories</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Dish dish in Model)
                {
                    <tr>
                        <td scope="col-5">@dish.Name</td>
                        <td scope="col-5">@dish.Creator.FirstName @dish.Creator.LastName</td>
                        <td scope="col-1">@dish.Tastiness</td>
                        <td scope="col-1">@dish.Calories</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>