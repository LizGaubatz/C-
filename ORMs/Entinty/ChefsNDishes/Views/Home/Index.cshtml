@model List<Chef>

@{
    ViewData["Title"] = "All Chefs";
}

<div class="d-flex flex-column justify-content-start">
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="NewChef">Add New Chef</a>
    <div class="col-9 border-bottom border-dark">
        <h5 class="p-3">Check out our roster of Chefs!</h5>
    </div>
    <div class="p-0 mt-3 col-10">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col-6">Name</th>
                    <th scope="col-3">Age</th>
                    <th scope="col-3"># of Dishes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Chef chef in Model)
                {
                    int years = (int)(DateTime.Now - @chef.DOB).TotalDays/365;
                    <tr>
                        <td scope="col-6">@chef.FirstName @chef.LastName</td>
                        <td scope="col-3">@years</td>
                        <td scope="col-3">@chef.Dishes.Count()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>