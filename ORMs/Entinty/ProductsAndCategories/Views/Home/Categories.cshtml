@model Category

<h1 class="text-center">Categories | <a href="/">Products</a></h1>

<div class="text-center row">
        <div class="col-8">
        <h2>New Catagory</h2>
        <form action="newCategory" method="post">
            <div class="form-group">
                <label for="CategoryName">Name</label>
                <input asp-for="CategoryName" class="form-control">
                <span asp-validation-for="CategoryName"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark" class="New Product">Create</button>
            </div>
        </form>
    </div>
    <div class="col-4">
        <h2>Existing Categories</h2>
        @{
            foreach(Category c in ViewBag.allCategories)
            {
                <p><a href="/Category/@c.CategoryId">@c.CategoryName</a></p>
            }
        }
    </div>

</div>