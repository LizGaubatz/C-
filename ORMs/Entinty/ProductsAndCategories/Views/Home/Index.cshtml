@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="text-center">
    <h1 class="text-center">Products | <a href="/categories">Categories</a></h1>
</div>
<div class="text-center row">
        <div class="col-8">
        <h2>New Product</h2>
        <form action="newProduct" method="post">
            <div class="form-group">
                <label for="ProductName">Name</label>
                <input asp-for="ProductName" class="form-control">
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark" class="New Product">Create</button>
            </div>
        </form>
    </div>
    <div class="col-4">
        <h2>Existing Products</h2>
        @{
            foreach(Product p in ViewBag.allProducts)
            {
                <p><a href="/product/@p.ProductId">@p.ProductName</a></p>
            }
        }
    </div>

</div>